#!perl

use 5.010;
use strict;
use warnings;

use App::ruler;
use Getopt::Long;

my %opts;
GetOptions(
    'width|w=i' => \$opts{width},
    'major-tick|T=i' => \$opts{major_tick},
    'major-tick-character|C=s' => \$opts{major_tick_character},
    #'minor-tick|t=i' => \$opts{minor_tick},
    'minor-tick-character|c=s' => \$opts{minor_tick_character},
);

my $r = App::ruler->new;
print $r->gen_ruler(
    width      => $opts{width},
    major_tick => $opts{major_tick},
);

# ABSTRACT: Print ruler on the terminal
